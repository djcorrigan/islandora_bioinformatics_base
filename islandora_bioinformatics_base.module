function rel_lab_objects_form($form, &$form_state, $object, $rel_cmodel) {

  $form['object'] = array(
    '#type' => 'hidden',
    '#value' => $object,
  );


  $form[] = array(
    '#prefix' => t("<h1>Related $rel_cmodel</h1><div id='form_$rel_cmodel'>"),
    '#suffix' => t('</div>'),
  );

  // Add Lab Object Button
  $form['add'] = array(
    '#type' => 'button',
    '#value' => t("Add $rel_cmodel"),
  );

  // Possible actions in a dropdown menu.
  $form['selected'] = array(
    '#type' => 'select',
    '#title' => 'Actions',
    '#options' => array(
      'delete' => t('Delete'),
    ),
    '#description' => t('Actions'),
  );

  // Submit button for actions.
  $form['submit'] = array(
    '#type' => 'submit',
    '#value' => 'Submit',
  );

  // Table of Related Lab Objects.
  $header = array(
    'title' => t('Title'),
  );

  $options = array(
    '1' => array('title'=> "$rel_cmodel 1"),
    '2' => array('title'=> "$rel_cmodel 2"),
  );

  $form['table'] = array(
    '#type' => 'tableselect',
    '#header' => $header,
    '#options' => $options,
    '#empty' => t("There is no related content of type $rel_cmodel."),
  );

  return $form;
}

